@model WebApplication1.Exceptions.ErrorViewModel

@{
    ViewData["Title"] = "Ошибка";
}

<h1 class="text-danger">Ошибка.</h1>
<h2 class="text-danger">@Model.Message</h2>

@if (Model.ShowRequestId)
{
    <p>
        <strong>Request ID:</strong> <code>@Model.RequestId</code>
    </p>
}

@if (Model.ValidationErrors != null)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var error in Model.ValidationErrors)
            {
                <li>@error.Key: @string.Join(", ", error.Value)</li>
            }
        </ul>
    </div>
}

@if (!string.IsNullOrEmpty(Model.Details))
{
    <div class="alert alert-warning">
        <p>@Model.Details</p>
    </div>
}
